<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    tools:context="com.jm.mvp.ui.activity.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x200"
        android:src="@mipmap/login_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginTop="@dimen/x100"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:src="@mipmap/login_account"/>

        <EditText
            android:id="@+id/et_login_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:hint="请输入帐号"
            android:textColor="@color/text_color_a19d9e"
            android:textColorHint="@color/text_color_a19d9e"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x90"
        android:layout_marginRight="@dimen/x90"
        android:layout_marginTop="@dimen/x30"
        android:background="@color/login_divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginTop="@dimen/x30"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:scaleType="fitXY"
            android:src="@mipmap/login_pwd"/>

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/text_color_a19d9e"
            android:textColorHint="@color/text_color_a19d9e"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x90"
        android:layout_marginRight="@dimen/x90"
        android:layout_marginTop="@dimen/x30"
        android:background="@color/login_divider"
        />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/x80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x100"
        android:background="@drawable/bg_button_blue"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="15sp"/>
</LinearLayout>
