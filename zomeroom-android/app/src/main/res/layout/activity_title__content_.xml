<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".mvp.ui.activity.MessageActivity">

    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="@dimen/x30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/x30"
            android:paddingTop="@dimen/x25"
            android:scaleType="fitCenter"
            android:src="@mipmap/flight_title_back_normal"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="邮件内容"
            android:textSize="16sp"
            android:paddingTop="@dimen/x25"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:id="@+id/v_tel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/bg_e1e1e1"/>

    <LinearLayout
        android:padding="@dimen/x20"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:text="这是标题"
            android:textColor="#000000"
            android:textSize="@dimen/x32"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time"
            android:paddingTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:textSize="@dimen/x24"
            android:text="时间：2018年11月10日12:31:07"
            android:textColor="#bbb"
            android:layout_height="wrap_content" />

        <LinearLayout
          android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/sender_letter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_10"
                android:textColor="#FFC17218"
                android:textSize="@dimen/x24"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/addressee_letter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#FFC17218"
                android:textSize="@dimen/x24"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/bg_e1e1e1"/>
    <TextView
        android:padding="@dimen/x20"
        android:id="@+id/text"
        android:textSize="@dimen/x32"
        android:text="这是推送的内容"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>