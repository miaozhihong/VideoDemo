<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/bg_e1e1e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x110"
        android:orientation="horizontal">

        <TextView
            style="@style/style_password_left"
            android:text="帐号"/>

        <TextView
            android:id="@+id/tv_pwd_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_333"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/bg_e1e1e1"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x110"
        android:orientation="horizontal">

        <TextView
            style="@style/style_password_left"
            android:text="原密码"/>

        <EditText
            android:id="@+id/et_pwd_pwd_old"
            style="@style/style_password_right"
            android:hint="请输入原密码"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/bg_e1e1e1"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x110"
        android:orientation="horizontal">

        <TextView
            style="@style/style_password_left"
            android:text="新密码"/>

        <EditText
            android:id="@+id/et_pwd_pwd_new"
            style="@style/style_password_right"
            android:hint="请输入新密码"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/bg_e1e1e1"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x110"
        android:orientation="horizontal">

        <TextView
            style="@style/style_password_left"
            android:text="确认密码"/>

        <EditText
            android:id="@+id/et_pwd_pwd_new_second"
            style="@style/style_password_right"
            android:hint="请再次输入密码"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/bg_e1e1e1"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"/>

    <TextView
        android:id="@+id/tv_pwd_confirm"
        android:layout_marginTop="@dimen/x140"
        android:text="确定"
        style="@style/style_button"/>

</LinearLayout>