<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x450"
        android:background="@mipmap/mine_bg">

        <ImageView
            android:id="@+id/iv_mine"
            android:layout_width="@dimen/x145"
            android:layout_height="@dimen/x145"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/headimage"/>
        <TextView
            android:id="@+id/tv_mine_account"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x65"
            android:layout_below="@+id/iv_mine"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x21"
            android:background="@drawable/bg_button_blue"
            android:gravity="center"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:text="帐号"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x40"
        app:divider="@drawable/bg_mine_line"
        app:dividerPadding="@dimen/y1"
        app:showDividers="middle|end|beginning">

        <TextView
            android:id="@+id/tv_mine_pwd"
            style="@style/fragment_mine_tv"
            android:drawableLeft="@mipmap/mine_pwd"
            android:text="修改密码"/>

        <TextView
            android:id="@+id/tv_mine_material"
            style="@style/fragment_mine_tv"
            android:drawableLeft="@mipmap/mine_black"
            android:text="个人资料"/>

        <TextView
            android:id="@+id/tv_mine_update"
            style="@style/fragment_mine_tv"
            android:drawableLeft="@mipmap/mine_update"
            android:text="版本更新"/>


    </android.support.v7.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tv_mine_exit"
        style="@style/style_button"
        android:layout_marginTop="@dimen/x140"
        android:text="退出登录"/>
</LinearLayout>