<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ios="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_item_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x110"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/x30"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="2019.1.8"
                android:textColor="@color/text_color_333"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tv_item_area"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="B"
                android:textColor="@color/text_color_333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_item_shop"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="方庄一店"
                android:textColor="@color/text_color_333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:gravity="center|right"

                android:text="跟进"
                android:textColor="@color/text_color_333"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_item_detail"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:layout_marginRight="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/x20"
                android:src="@mipmap/detail_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@color/bg_e1e1e1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_allocation"
        android:layout_width="@dimen/x170"
        android:layout_height="@dimen/x110"
        android:background="@color/bg_f9c001"
        android:gravity="center"
        android:text="调拨"
        android:textColor="@color/white"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tv_item_warehou"
        android:layout_width="@dimen/x170"
        android:layout_height="@dimen/x110"
        android:background="@color/blue"
        android:gravity="center"
        android:text="入库"
        android:textColor="@color/white"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tv_item_detailed_cancle"
        android:layout_width="@dimen/x170"
        android:layout_height="@dimen/x110"
        android:background="@color/bg_fe051b"
        android:gravity="center"
        android:text="取消调拨"
        android:textColor="@color/white"
        android:textSize="13sp" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>