<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x120"
    >

    <ImageView
        android:id="@+id/images"
        android:padding="@dimen/x10"
        android:layout_width="@dimen/x120"
        android:src="@mipmap/headimage"
        android:layout_height="match_parent" />
   <LinearLayout
       android:layout_width="match_parent"
       android:padding="@dimen/x10"
       android:layout_toEndOf="@+id/images"
       android:orientation="vertical"
       android:layout_height="match_parent">
       <TextView
           android:id="@+id/tv_item_subway"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center_vertical"
           android:textColor="@color/text_color_333"
           android:textSize="14sp"
           />
       <TextView
           android:id="@+id/tv_state"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:gravity="center_vertical"
           android:layout_weight="1"
           android:textColor="@color/ligthred"
           android:textSize="12sp"
           tools:ignore="UnknownId" />

   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/bg_f2f2f2"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25"/>
</RelativeLayout>