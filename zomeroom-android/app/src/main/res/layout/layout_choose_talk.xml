<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title_talk"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y180"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/layout_title_choose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/x60">

        <ImageView
            android:id="@+id/iv_title_back_choose"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:padding="@dimen/x30"
            android:scaleType="fitCenter"
            android:src="@mipmap/flight_title_back_normal"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                style="@style/style_title_choose"
                android:text="电话回访"
                android:textColor="#000"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_title_second_choose"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y100"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/x28"
            android:text="确定"
            android:textColor="@color/default_title"
            android:textSize="14sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_title_second_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_message"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x25"
            android:padding="@dimen/x15"
            android:src="@mipmap/message"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x25"
            android:padding="@dimen/x15"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:background="@color/main_bg"/>
</RelativeLayout>