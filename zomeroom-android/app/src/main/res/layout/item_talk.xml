<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:ios="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_item_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x110"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_tel_isCall"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x25"
                android:src="@mipmap/call_done"/>

            <LinearLayout
                android:layout_width="@dimen/x220"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_tel_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="13584593359"
                    android:textColor="@color/text_color_333"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_item_tel_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x5"
                    android:text="2018-02-24 19：58"
                    android:textColor="@color/text_color_333"
                    android:textSize="10sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_tel_shop"
                android:layout_width="@dimen/x180"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x45"
                android:gravity="center_vertical"
                android:text="方庄一店"
                android:textColor="@color/text_color_333"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/tv_item_tel_intention"
                android:layout_width="@dimen/x100"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="跟进"
                android:textColor="@color/text_color_333"
                android:textSize="13sp"
                />

            <ImageView
                android:id="@+id/iv_item_tel_detail"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/x20"
                android:src="@mipmap/detail_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@color/bg_e1e1e1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_tel_call"
        android:layout_width="@dimen/x170"
        android:layout_height="@dimen/x110"
        android:background="@color/bg_f9c001"
        android:gravity="center"
        android:text="拨打电话"
        android:textColor="@color/white"
        android:textSize="13sp"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>