<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowBackground">@mipmap/splash</item>-->
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="PopWindowAnimStyle">
        <!-- 指定显示的动画xml -->
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
    </style>

    <!--底部导航-->
    <style name="Nav_RadioButton">
        <item name="android:paddingTop">@dimen/x20</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/nav_tv_color_select</item>
    </style>

    <style name="style_password_left">
        <item name="android:layout_width">@dimen/x140</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/x30</item>
        <item name="android:textColor">@color/text_color_333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_password_right">
        <item name="android:layout_width">@dimen/x400</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_color_333</item>
        <item name="android:textColorHint">@color/text_color_666</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="style_home_tel">
        <item name="android:drawablePadding">@dimen/x15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawableRight">@mipmap/signdown</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_666</item>
    </style>

    <style name="style_detail_left">
        <item name="android:layout_width">@dimen/x220</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x30</item>
        <item name="android:textColor">@color/text_color_333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_detail_lefts">
        <item name="android:layout_width">@dimen/x200</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x30</item>
        <item name="android:textColor">@color/text_color_333</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="style_detail_map">
        <item name="android:layout_width">@dimen/x220</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x30</item>
        <item name="android:textColor">@color/text_color_333</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_talk_select">
        <item name="android:layout_width">@dimen/x150</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x30</item>
        <item name="android:textColor">@color/text_color_333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_talk_left">
        <item name="android:layout_width">@dimen/x300</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x30</item>
        <item name="android:textColor">@color/text_color_333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_detail_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableRight">@mipmap/detail_select</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x30</item>
        <item name="android:paddingRight">@dimen/x40</item>
        <item name="android:textColor">@color/text_color_666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="fragment_mine_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y100</item>
        <item name="android:drawablePadding">@dimen/x30</item>
        <item name="android:drawableRight">@mipmap/personel_arrow_right</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textColor_home</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="style_button">
        <item name="android:layout_width">@dimen/x480</item>
        <item name="android:layout_height">@dimen/x80</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_title_choose">
        <item name="android:layout_width">@dimen/x160</item>
        <item name="android:layout_height">@dimen/y60</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/title_tv_color_select</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_111</item>
    </style>

    <style name="hotel_star_dialog_top_style">
        <!--充满屏幕-->
        <item name="android:windowFullscreen">true</item>
        <!-- 是否背景模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/bg_4500000</item>
    </style>
</resources>
